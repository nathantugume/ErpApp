<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/fragment_sales"
    android:padding="16dp">

    <EditText
        android:id="@+id/etBarcodeOrSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter barcode or search text"
        android:drawableEnd="@drawable/ic_barcode"
        android:drawablePadding="8dp"
        android:clickable="true"
        android:focusable="true"
        android:inputType="none"
        android:cursorVisible="false"

        />

    <Button
        android:id="@+id/btnFetchProductDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fetch Product Details"/>
</LinearLayout>
